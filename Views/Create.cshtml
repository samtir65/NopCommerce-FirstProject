@model Nop.Plugin.Misc.Projects.Domain.Project
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <form method="post">
        
        <div class="row">

            <div class="col-lg-12">
                <h2 class="page-header">Create Project</h2>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                   New Project
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>Name</label>

                        <input type="text" class="form-control" asp-for="Name">
                        <label>ShortDescription</label>

                        <input type="text" class="form-control" asp-for="ShortDescription">
                        <label>FullDescription</label>

                        <input type="text" class="form-control" asp-for="FullDescription">
                        <label>Published</label>
                        <input type="checkbox" asp-for="Published" />
                        <div class="row" style="margin-right:auto">
                            <br />
                            <button class="btn-sm btn-success center-block">Save </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <span asp-validation-summary="All"></span>

    </form>

