@using System.Collections.Generic;
@model Nop.Plugin.Misc.Projects.Domain.Project
@{
    Layout = "~/Views/Shared/_Root.cshtml";
}
<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 5px;
        text-align: left;
    }
</style>
<form>
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Details</h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>
  
    <table style="width:100%">
        <tr>
            <td>
                <label>Name:</label>
                <p><b>@Model.Name</b></p>
                <label>ShortDescription:</label>
                <p><b>@Model.ShortDescription</b></p>
                <label>FullDescription:</label>
                <p><b>@Model.FullDescription</b></p>
            </td>
        </tr>
    </table>

</form>